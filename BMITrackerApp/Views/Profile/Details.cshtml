@model BMITrackerApp.Models.Entities.HealthProfile

@{
    ViewData["Title"] = "Details";
}

<h2>Details for @Model.FirstName</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            First Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.FirstName)
        </dd>
        <dt>
            Last Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.LastName)
        </dd>
        <dt>
            Year Of Birth
        </dt>
        <dd>
            @Html.DisplayFor(model => model.YearOfBirth)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        @{
            if (Model.Gender == 0)
            {
                <dd>Female</dd>}
            else if (Model.Gender == 1)
            {
                <dd>Male</dd>}
            else
            {
                <dd>Other</dd>}
        }
        <dt>
            @Html.DisplayNameFor(model => model.Height)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Height)
        </dd>
        <dt>
            @Html.DisplayNameFor(model => model.Weight)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt>
            Age
        </dt>
        <dd>
            @Model.GetAge()
        </dd>
        <dt>
            Max Heart Rate
        </dt>
        <dd>
            @Model.CalculateMaxHeartRate()
        </dd>
        <dt>
            Target Heart Rate
        </dt>
        <dd>
            @Model.CalculateMinimumTargetHeartRate() - @Model.CalculateMaximumTargetHeartRate()
        </dd>
        <dt>
            Body Mass Index (BMI)
        </dt>
        <dd>
            @Math.Round(Model.CalculateBMI(), 3)
        </dd>
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new {  id = Model.Id  }) |
    <a asp-action="Index" asp-controller="Home">Back to List</a>
</div>
